<div id="spiral-disc">
	<div id="contentsArea" class="clearfix">
		<div id="mainContent">
			<div id="mainContentInner">
				<h2 class="subtitle"><%= image_tag 'h2_subtitle.png', width:"1020px", height:"42px" %></h2>
				<div class="goodMainArea clearfix">
					<div class="goodsJacket">
						<div class="goodsJacketInner">
							<table cellpadding="0" cellspacing="0" border="0">
								<tbody>
									<tr>
										<td style="border:none;"><%= attachment_image_tag @product, :image %></td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<div class="goodsDetail">
						<div class="productDetail">
							<p class="musicName"><%= @product.product_name %></p>
							<p class="artists"><%= @product.artist_name %></p>
						</div>
					<div class="productDetail2">
						<p class="textcolorgray">※発送されてからお届けまでの日数は、地域により異なります</p>
					</div>
					</div>
					<div class="goodsDetail2">
						<div class="goodsCart">
							<ul>
								<li class="default">
									<dl>
										<dt>価格(税込)</dt>
										<dd><span>¥<%= @product.price %></span></dd>
									</dl>
								</li>
							</ul>
							<%= form_for(@cart, url: user_carts_path(current_user)) do |f| %>
								<%= f.hidden_field :product_id, value:"#{@product.id}" %>
								<%= f.hidden_field :quantity, value:"1" %>
								<%= f.hidden_field :price, value:"#{@product.price}" %>
								<%= f.submit 'カートに入れる', class:"btn btn-primary" %>
							<% end %>
						</div>
					</div>
				</div>
				<h3 class="h3title" id="productInformation">商品の情報</h3>
				<div class="customerSection clearfix">
					<div class="productDetailInfoTable">
						<table cellpadding="0" cellspacing="1" border="0">
							<colgroup>
								<col width="30%">
								<col width="70%">
							</colgroup>
							<tbody>
								<tr class="even">
									<th id="narrow">
										<div><p>  発売日</p></div>
									</th>
									<td id="narrow">
										<div><p><span style="display: inline-block; width: 5px; height: 1px;"></span><%= @product.release_date %></p></div>
									</td>
								</tr>
								<tr>
									<th id="narrow">
										<div><p>  レーベル</p></div>
									</th>
									<td id="narrow">
										<div><p><span style="display: inline-block; width: 5px;"></span><%= @product.label %></p></div>
									</td>
								</tr>
								<tr class="even">
									<th id="narrow">
										<div><p>  ディスク枚数</p></div>
									</th>
									<td id="narrow">
										<div><p><span style="display: inline-block; width: 5px;"></span><%= @discs.count %>枚</p></div>
									</td>
								</tr>
								<tr>
									<th id="narrow">
										<div><p>  曲数</p></div>
									</th>
									<td id="narrow">
										<div><p><span style="display: inline-block; width: 5px;"></span><%= @total_music %>曲</p></div>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<h3 class="h3title" id="productInformation">商品の紹介</h3>
				<div class="customerSection">
					<div class="productDetailSentenceList">
						<div class="productDetailSentenceTop">
							<div class="productDetailSentenceMid">
								<p><%= @product.info %></p>
							</div>
						</div>
					</div>
				</div>
				<h3 class="h3title" id="productInformation">収録内容</h3>

					<div class="productDetailInfoTable">
						<div class="productDetailInfoTable">
						<% @discs.each do |disc| %>
						<table cellpadding="0" cellspacing="1" border="0">
						<h3 class="h3title" id="productFormat">[<%= disc.disc_name %>]</h3>
							<colgroup>
								<col width="10%">
								<col width="50%">
								<col width="20%">
							</colgroup>
							<thead>
								<th  id="narrow", style="text-align: center">曲番号</th>
								<th id="narrow"><span style="display: inline-block; width: 5px;"></span>タイトル</th>
								<th id="narrow"><span style="display: inline-block; width: 5px;"></span>時間</th>
							</thead>
							<tbody>
							<% disc.musics.each do |music| %>
								<tr class="even">
									<td id="narrow">
										<div style="text-align: center"><p><%= music.music_number %></p></div>
									</td>
									<td id="narrow">
										<div><p><span style="display: inline-block; width: 5px;"></span><%= music.music_name %></p></div>
									</td>
									<td id="narrow">
										<div><p><span style="display: inline-block; width: 5px;"></span><%= music.music_time.strftime("%H:%M") %></p></div>
									</td>
								</tr>
							<% end %>
							</tbody>
						</table>
						<% end %>
						</div>
					</div>
				<div class="customerSection clearfix">
				</div>
			</div>
		</div>
	</div>
</div>