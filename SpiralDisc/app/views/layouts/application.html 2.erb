<!DOCTYPE html>
<html>
  <head>
    <title>SpiralDisc</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background: none">
    <header class="navbar navbar-fixed-top header-color">
      <div class="container">
        <span>
            <a class="" href="#">
              <%= image_tag 'logo.png' %>
            </a>
          </span>
          <ul class="nav pull-right nav-pills" style="font-size: 14px">
            <% if admin_signed_in? %>
              <li class="nav">
                <%= link_to "商品一覧", admin_products_path, class:"nav" %>
              </li>
              <li class="nav">
                <%= link_to '新規出品', new_admin_product_path, class:"nav" %>
              </li>
              <li class="nav">
                <%= link_to "ユーザ一覧", admin_users_path, class:"nav" %>
              </li>
              <li class="nav">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"nav" %>
              </li>
            <% else %>
              <li class="nav">
              </li>
            <% end %>
          </ul>
      </div>
    </header>
    <%= yield %>
    <footer class="container-fluid">
          <small>
            <span>
            <a class="" href="#">
              <%= image_tag 'logo.png' %>
            </a>
          </span>
          </small>
    </footer>
  </body>
</html>
